<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
       <!-- bootstrap links -->
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link
rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<link rel="stylesheet" href="/cart.css">
</head>

<body>
<!-- navbar -->
<%- include('navbar') %>

 <!-- body -->
<div class="container-fluid p-4">
<h2 style="font-weight:800;font-size:40px;" class="text-center mb-5">ðŸ›’ Your Cart</h2>

    <div id="cart-items" style="background-color:#acad94;"></div>
    <h3 class="mt-5 text-center">Total: â‚¹<span id="totalAmount">0</span></h3>

    <div class="text-center">
    <button  class="btn btn-success mt-3 " data-bs-toggle="modal" data-bs-target="#paymentModal">
        Proceed to Pay
    </button></div>

    <!-- Payment Modal -->
    <div class="modal fade" id="paymentModal">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h4>Payment Details</h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                  <form>
                  <h5>Choose Payment Method:</h5>
                  
                  <!-- UPI Payment -->
                  <div class="mb-3">
                      <label for="upi" class="form-label">UPI ID</label>
                      <input type="text" class="form-control" id="upi" name="upi" placeholder="example@upi">
                  </div> <div class="mb-3">
                      <label for="pin" class="form-label">Pin </label>
                      <input type="number" class="form-control" id="pin" name="pin" placeholder="1234">
                  </div>

                  <h4 class="mt-4 mb-2">Sorry for no other Payment options, Card details will be Available soon .</h4>

                    
                      <button id="payButton" class="btn btn-primary w-100" type="submit" name="payButton" >Pay Now</button>
                  </form>
              </div>
          </div>
      </div>
  </div>

    <section class="recipeshow">
        <h2>&#127860;View Recipe Details</h2>
    <form id="paymentForm">
      <div class="recipeinner">
        <div class="mb-3">
            <label for="upicheck" class="form-label">UPI ID:</label>
            <input type="text" id="upicheck" name="upicheck" class="form-control" placeholder="Enter upi id here" required>
        </div>
        <div class="mb-3">
            <label for="pincheck" class="form-label">Pin:</label>
            <input type="password" id="pincheck" name="pincheck" class="form-control" placeholder="Enter password" required>
        </div>
        <button type="submit" data-bs-toggle="modal" data-bs-target="#recipeModal" class="btn btn-primary w-100">Submit Details</button>

        </div>
        <!-- Recipe Modal -->
<div class="modal fade" id="recipeModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Your Dishes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="modal-body">
        <!-- Dynamic content -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    </form>
    </section>
    </div>
    <script src="/cart1.js"></script>
 <!-- footer -->
 <%- include('footer') %>
 <script>
    window.addEventListener("DOMContentLoaded", () => {
      fetch("navbar1.html")
        .then((res) => res.text())
        .then((data) => {
          const nav = document.querySelector(".navbar1");
          if (nav) nav.innerHTML = data;
        });
      fetch("footer.html")
        .then((res) => res.text())
        .then((data) => {
          const foot = document.querySelector(".footer");
          if (foot) foot.innerHTML = data;
        });
    });
  </script>
</body>
</html>